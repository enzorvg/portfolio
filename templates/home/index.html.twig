{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Hero gradient title */
        .hero-title {
            background: linear-gradient(135deg, #00d4e8, #00b8d4, #0d3b66);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 3rem;
            font-weight: 900;
            letter-spacing: -0.02em;
        }

        /* Hero profile image with glow */
        .hero-profile-img {
            position: relative;
            display: inline-block;
        }
        .hero-profile-img::before {
            content: '';
            position: absolute;
            inset: -12px;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(0, 184, 212, 0.4), rgba(13, 59, 102, 0.3));
            z-index: -1;
            filter: blur(20px);
        }
        .hero-profile-img img {
            position: relative;
            z-index: 1;
            border: 2px solid rgba(0, 184, 212, 0.3);
        }

        /* CTA Button */
        .btn-cv {
            background: linear-gradient(135deg, #00b8d4, #00d4e8);
            color: #0a1423;
            border: none;
            font-weight: 700;
            padding: 12px 28px;
            border-radius: 10px;
            transition: all 280ms cubic-bezier(0.4, 0.0, 0.2, 1);
            box-shadow: 0 8px 24px rgba(0, 184, 212, 0.3);
            letter-spacing: 0.5px;
        }
        .btn-cv:hover {
            transform: translateY(-4px);
            box-shadow: 0 14px 36px rgba(0, 184, 212, 0.4);
            color: #0a1423;
        }
        .btn-cv:active {
            transform: translateY(-1px);
        }

        /* Section headers accent */
        .section-heading { display: inline-flex; align-items: center; gap: 10px; }
        .section-heading::before {
            content: '';
            width: 42px;
            height: 3px;
            border-radius: 999px;
            background: linear-gradient(90deg, var(--accent), var(--primary));
        }

        /* Project card enhanced */
        .project-card {
            transition: all 300ms cubic-bezier(0.4, 0.0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        .project-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #00b8d4, #0d3b66);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 300ms cubic-bezier(0.4, 0.0, 0.2, 1);
            z-index: 1;
        }
        .project-card:hover::before {
            transform: scaleX(1);
        }
        .project-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 48px rgba(0, 184, 212, 0.2) !important;
        }
        .card-img-top {
            transition: filter 300ms cubic-bezier(0.4, 0.0, 0.2, 1);
        }
        .project-card:hover .card-img-top {
            filter: brightness(1.1) saturate(1.15);
        }

        /* Override skill cards to avoid white blocks */
        .skill-card {
            border: 1px solid rgba(255, 255, 255, .1);
            border-radius: var(--radius);
            padding: 18px 14px;
            background: linear-gradient(150deg, #0f192f, #0c1528 70%);
            box-shadow: var(--shadow);
            transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
            cursor: pointer;
            height: 100%;
        }
        .skill-card:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 0, 0, .4);
            border-color: rgba(34, 211, 238, .35);
        }
        .skill-thumb {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 78px;
            height: 78px;
            border-radius: 12px;
            background: rgba(4, 51, 130, .12);
            border: 1px solid rgba(255, 255, 255, .08);
            margin: 0 auto 12px;
            overflow: hidden;
        }
        .skill-thumb img {
            width: 64px;
            height: 64px;
            object-fit: contain;
        }
        .skill-name {
            text-align: center;
            font-weight: 700;
            color: #f8fafc;
            font-size: 1rem;
            margin: 0;
        }
    </style>
{% endblock %}

